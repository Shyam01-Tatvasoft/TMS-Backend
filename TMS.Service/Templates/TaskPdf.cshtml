@model List<TaskAssignDto>

<!DOCTYPE html>
<html>
<head>
    <style>
        body {
            font-family: Arial, sans-serif;
            font-size: 12px;
            padding: 20px;
        }
        .header {
            text-align: center;
    using TMS.Repository.Dtos;
#line default
e default
